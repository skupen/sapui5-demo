<mvc:View
   controllerName="sap.ui.demo.walkthrough.controller.ProductList"
   xmlns="sap.m"
   xmlns:mvc="sap.ui.core.mvc">
   <List
      id="productList"
      mode="Delete"
		delete="handleDelete"
      headerText="{i18n>productListTitle}"
      class="sapUiResponsiveMargin"
      width="auto"
      items="{
         path : 'product>/Products'
      }">
      <headerToolbar>
         <Toolbar>
            <Title text="{i18n>productListTitle}"/>
            <ToolbarSpacer/>
            <SearchField width="50%" liveChange=".onFilterProducts"/>
				<ToolbarSpacer/>
            <Button icon="sap-icon://add" id="addDialogButton" type="Transparent" press="onOpenDialog" ariaLabelledBy="addButtonLabel" tooltip="Add"/>
				<Button icon="sap-icon://edit" type="Transparent" press="onPressEdit" ariaLabelledBy="editButtonLabel" tooltip="Edit"/>          
         </Toolbar>
      </headerToolbar>
      <items>
         <ObjectListItem
            title="{product>Name}"
            type="Navigation"
				press="onPress">
			</ObjectListItem>           
      </items>
   </List>
</mvc:View>